[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/Synth/
ExecStart=/home/Synth/venv/bin/gunicorn --workers 1 --bind unix:/home/Synth/deploy/gunicorn.sock core.wsgi:application

[Install]
WantedBy=multi-user.target
