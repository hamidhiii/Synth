[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/NEURYNTH_ERP
ExecStart=/home/NEURYNTH_ERP/venv/bin/gunicorn --workers 1 --bind unix:/home/NEURYNTH_ERP/deploy/gunicorn.sock core.wsgi:application

[Install]
WantedBy=multi-user.target
